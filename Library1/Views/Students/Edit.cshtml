@model Library1.Models.Student
<style>
    form {
        justify-content: center;
        background-color: white;
        padding: 20px;
    }


    h1 {
        text-align: center
    }

    body {
        background-color: aliceblue;
    }


    button {
        cursor: pointer;
    }
</style>

@if (Model is null)
{
    <p>No Students are found</p>
}
else
{
    <form method="post">
        <h1>Edit Student</h1>
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="number" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Student Name</label>
            <input type="text" class="form-control" asp-for="Name" required />
        </div>
        <div class="mt-3">
            <label class="form-label">USN</label>
            <input type="text" class="form-control" asp-for="usn" required />
        </div>
        <div class="mt-3">
            <label class="form-label">Department</label>
            <input type="date" class="form-control" asp-for="Department" required />
        </div>
        <div class="mt-3">
            <label class="form-label">Semester</label>
            <input type="date" class="form-control" asp-for="sem" required />
        </div>

        <br />
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger mt-1" asp-action="Delete" asp-controller="">Delete</button>
        </div>
    </form>
}
