@{
}
@model Library1.Models.AddStudentViewModel
<style>
    form {
        justify-content: center;
        background-color: white;
        padding: 20px;
    }


    h1 {
        text-align: center
    }

    body {
        background-color: aliceblue;
    }


    button {
        cursor: pointer;
    }
</style>


<form method="post">
    <h1>Add Stduents</h1>
    <div class="mt-3">
        <label class="form-label">Student Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>
    <div class="mt-3">
        <label class="form-label">USN</label>
        <input type="text" class="form-control" asp-for="usn" required />
    </div>
    <div class="mt-3">
        <label class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department" required />
    </div>
    <div class="mt-3">
        <label class="form-label">Semester</label>
        <input type="text" class="form-control" asp-for="sem" required />
    </div>
   

    <br />
    <div class="d-grid gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>

</form>

