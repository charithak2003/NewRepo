@{
}
@model Library1.Models.Author
<style>
    form {
        justify-content: center;
        background-color: white;
        padding: 20px;
    }


    h1 {
        text-align: center
    }

    body {
        background-color: aliceblue;
    }


    button {
        cursor: pointer;
    }
</style>

@if (Model is null)
{
    <p>No Authors are found</p>
}
else
{
    <form method="post">
        <h1>Edit Authors</h1>
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="number" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Author Name</label>
            <input type="text" class="form-control" asp-for="Author_Name" />
        </div>

        <br />
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger mt-1" asp-action="Delete" asp-controller="">Delete</button>
        </div>
    </form>
}
