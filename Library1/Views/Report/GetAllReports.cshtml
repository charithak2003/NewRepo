@model List<Library1.Models.Report>
<style>
    /* Style the table */
    .table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        font-family: Arial, sans-serif;
    }

        /* Style table header */
        .table th {
            background-color: mediumpurple;
            color: white;
            padding: 12px 15px;
            text-align: left;
        }

        /* Style table rows */
        .table td {
            border-bottom: 1px solid #ddd;
            padding: 8px 15px;
        }

        /* Style alternating rows */
        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    /* Style edit button */
    .btn-primary {
        background-color: deepskyblue;
        color: #fff;
        border: none;
        padding: 8px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>


<h1>Get All Reports</h1>
<form asp-action="Search" method="get">
    <input type="text" name="searchTerm" placeholder="Search by student or book" />
    <button type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Student Id</th>
            <th>Book Id</th>
            <th>Issue Date</th>
            <th>Return Date</th>
            <th>Penalty/th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Student_Id</td>
                <td>@item.Book_Id</td>
                <td>@item.Issue_date</td>
                <td>@item.Return_date</td>
                <td>@item.Penalty</td>

                <td>
                    <a class="btn btn-primary" asp-controller="Report" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
